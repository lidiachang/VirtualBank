
@*@using HTMLHelper.Helper*@
@model VirtualBank.Helpers.Pager<VirtualBank.ViewModel.PagerTransactionDetail>

<div class="panel-body">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-sm table-condensed table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => Model.Items.FirstOrDefault().trx_Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model.Items.FirstOrDefault().trx_type)
                        </th>
                        <th class="text-right">
                            @Html.DisplayNameFor(model => Model.Items.FirstOrDefault().amount)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => Model.Items.FirstOrDefault().desc)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => Model.Items.FirstOrDefault().desc_2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model.Items.FirstOrDefault().created_by)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model.Items.FirstOrDefault().created_dt)
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Items)
                    {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.trx_Id)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.trx_type)
                        </td>
                        <td class="text-right">
                            @Html.DisplayFor(modelItem => item.amount)
                        </td>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.desc)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.desc_2)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.created_by)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.created_dt)
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <nav aria-label="Page navigation" class="col-12">

        <ul class="pagination justify-content-center">

            @if (Model.CurrentPage != 1 && @Model.TotalItems > 0)
            {
                var p = 1;
                var funName = "ReloadDetailList(" + p + ")";
                <li class="page-item">
                    <a href="javascript:@funName;" class="page-link">1</a>
                </li>
            }

            @if (Model.CurrentPage > 1)
            {

                var p = Model.CurrentPage - 1;
                var funName = "ReloadDetailList(" + p + ")";
                <li class="page-item">
                    <a href="javascript:@funName;" class="page-link"><</a>
                </li>
            }

            @foreach (var p in Model.Pages)
            {
                var funName = "ReloadDetailList(" + p + ")";
                <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                    <a href="javascript:@funName;" class="page-link">@p</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                var p = Model.CurrentPage + 1;
                var funName = "ReloadDetailList(" + p + ")";
                <li class="page-item">
                    <a href="javascript:@funName;" class="page-link">></a>
                </li>
            }

            @if (Model.CurrentPage != Model.TotalPages)
            {
                var p = Model.TotalPages;
                var funName = "ReloadDetailList(" + p + ")";
                <li class="page-item">
                    <a href="javascript:@funName;" class="page-link">>></a>
                </li>
            }
        </ul>
    </nav>
    </div>
